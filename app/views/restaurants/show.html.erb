<h1><%= @restaurant.name %></h1>

<div id="restaurant_details">
	<h2>Summary</h2>
	<p><%= @restaurant.summary %></p>
	<p><strong>Maximum Capacity: </strong><%=@restaurant.max_seats %></p>
	<h2>How to find us!</h2>
	<p><strong>Address: </strong>
		<%= @restaurant.address %>
		<%= @restaurant.city %>, <%= @restaurant.province %>
		<%= @restaurant.postal_code %>		
	</p>
	<p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>
	<p><strong>Email: </strong><a href="mailto:<%= @restaurant.email %>?Subject=Seat%20Yourself%20Customer">Send an email</a></p>
	<p><strong>Website: </strong><a href="<%= @restaurant.website %>" target="_blank">Visit their website</a></p>
</div>

<%= link_to "Edit", edit_restaurant_path(@restaurant) %> | 
<%= link_to 'Delete',@restaurant, method: :delete, data: { confirm: 'Are you sure?' } %><br/>

<% if current_user.nil? %>
	<%= link_to 'Please log in to make a reservation', new_session_path %>
<% else %>
	<%= render 'reservation_form' %>
<% end %>